{
  "repositories": {
    "comfyui": {
        "url": "https://github.com/comfyanonymous/ComfyUI.git"
    },
    "workflows": {
        "url": "https://github.com/UmeAiRT/ComfyUI-Workflows"
    }
  },
  "tools": {
    "vs_build_tools": {
      "install_path": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools",
      "url": "https://aka.ms/vs/17/release/vs_BuildTools.exe",
      "arguments": "--wait --quiet --norestart --add Microsoft.VisualStudio.Workload.VCTools --includeRecommended"
    }
  },
  "pip_packages": {
    "upgrade": [
      "pip",
      "wheel"
    ],
    "torch": {
      "packages": "torch==2.8.0+cu129 torchvision torchaudio",
      "index_url": "https://download.pytorch.org/whl/cu129"
    },
    "comfyui_requirements": "requirements.txt",
    "wheels": [
      {
        "name": "nunchaku-1.0.2+torch2.8-cp312-cp312-win_amd64.whl",
        "url": "https://github.com/nunchaku-tech/nunchaku/releases/download/v1.0.2/nunchaku-1.0.2+torch2.8-cp312-cp312-win_amd64.whl"
      },
      {
        "name": "insightface-0.7.3-cp312-cp312-win_amd64",
        "url": "https://github.com/UmeAiRT/ComfyUI-Auto_installer/raw/main/whl/insightface-0.7.3-cp312-cp312-win_amd64.whl"
      },
      {
        "name": "triton-3.5.0.post21-py3-none-any",
        "url": "https://github.com/UmeAiRT/ComfyUI-Auto_installer/raw/main/whl/triton-3.5.0.post21-py3-none-any.whl"
      }
    ],
    "standard": [
      "facexlib",
      "cython",
      "onnxruntime",
      "onnxruntime-gpu",
      "triton-windows",
	  "hf_xet",
	  "nvidia-ml-py",
	  "cupy-cuda12x"
    ],
    "git_repos": [
	{
		"name": "xformers",
		"url": "https://github.com/facebookresearch/xformers.git",
		"commit": "v0.0.33.post1",
		"install_options": "--no-build-isolation --verbose"
	},
	{
		"name": "SageAttention",
		"url": "https://github.com/thu-ml/SageAttention",
		"commit": "main",
		"install_options": "--no-build-isolation"
	},
	{
		"name": "apex",
		"url": "https://github.com/UmeAiRT/apex",
		"commit": "master",
		"install_options": "-v --disable-pip-version-check --no-cache-dir --no-build-isolation --config-settings \"--build-option=--cpp_ext\" --config-settings \"--build-option=--cuda_ext\""
	}
	]
  },
  "files": {
    "comfy_settings": {
      "url": "https://huggingface.co/UmeAiRT/ComfyUI-Auto_installer/resolve/main/others/comfy.settings.json",
      "destination": "user/default/comfy.settings.json"
    },
    "custom_nodes_csv": {
        "url": "https://github.com/UmeAiRT/ComfyUI-Auto_installer/raw/main/scripts/custom_nodes.csv",
        "destination": "scripts/custom_nodes.csv"
    }
  }
}
